# Companies House API Configuration
# Get your free API key from: https://developer.company-information.service.gov.uk/
CH_API_KEY=your_companies_house_api_key_here

# AI API Keys (Optional - choose one or both)
# OpenAI API Key - for GPT models
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key - for Claude models  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
PORT=10000

# OCR Configuration (Optional - for advanced OCR settings)
TESSDATA_PREFIX=/usr/share/tesseract-ocr/5/tessdata/
OMP_THREAD_LIMIT=1

# Logging Level
LOG_LEVEL=INFO

# Analysis Configuration (Optional)
MAX_YEARS_ANALYSIS=10
MAX_FILES_PER_ANALYSIS=5
ENABLE_CACHING=True

# Security (Optional)
SECRET_KEY=your_secret_key_for_sessions